using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;
using System.Web;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {

            string name;
            string pidorApproved;


            Console.WriteLine("Как тебя зовут?");
            name = Console.ReadLine();


            Console.WriteLine($"Привет, {name}. Ты пидор?");

            pidorApproved = Console.ReadLine();

            switch (pidorApproved)
            {
                case "да":
                    Console.WriteLine("Welcome to the club, buddy!");
                    break;

                case "нет":
                    Console.WriteLine($"Поздравляю, {name}, теперь ты пидор!");
                    break;

                default:
                    Console.WriteLine("Ответь да или нет ёпт");
                    break;
            }


        }
    }
}
